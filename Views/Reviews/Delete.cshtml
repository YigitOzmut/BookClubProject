@model BookClub.WebApi.Models.Review

@{
    ViewData["Title"] = "Delete Review - BookClub";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Review</h4>
                </div>
                <div class="card-body">
                    <p class="alert alert-warning">
                        <strong>Warning:</strong> Are you sure you want to delete this review? This action cannot be undone.
                    </p>

                    <div class="card mb-3">
                        <div class="card-body">
                            <p><strong>Book:</strong> @Model.Book?.Title</p>
                            <p><strong>Member:</strong> @Model.Member?.Name</p>
                            <p><strong>Rating:</strong> @Model.Rating/5 Stars</p>
                            <p><strong>Comment:</strong> @(string.IsNullOrEmpty(Model.Comment) ? "No comment" : Model.Comment.Substring(0, Math.Min(100, Model.Comment.Length)) + (Model.Comment.Length > 100 ? "..." : ""))</p>
                        </div>
                    </div>

                    <form method="post" action="/reviews/delete/@Model.ReviewId">
                        @Html.AntiForgeryToken()
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Yes, Delete Review</button>
                            <a href="/book/@Model.BookId" class="btn btn-outline-secondary"><i class="bi bi-x-circle"></i> Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
