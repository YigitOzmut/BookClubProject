@model BookClub.WebApi.Models.Book

@{
    ViewData["Title"] = $"Delete {Model.Title} - BookClub";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Book</h4>
                </div>
                <div class="card-body">
                    <p class="alert alert-warning">
                        <strong>Warning:</strong> Are you sure you want to delete <strong>@Model.Title</strong>? This action cannot be undone.
                    </p>

                    <div class="card mb-3">
                        <div class="card-body">
                            <p><strong>Title:</strong> @Model.Title</p>
                            <p><strong>Genre:</strong> @(Model.Genre?.Name ?? "Unknown")</p>
                            <p><strong>Published:</strong> @(Model.PublicationYear?.ToString() ?? "Unknown")</p>
                            <p><strong>Reviews:</strong> @Model.Reviews.Count</p>
                        </div>
                    </div>

                    <form method="post" action="/books/delete/@Model.BookId">
                        @Html.AntiForgeryToken()
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Yes, Delete Book</button>
                            <a class="btn btn-outline-secondary" href="/books"><i class="bi bi-x-circle"></i> Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
