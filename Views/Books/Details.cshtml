@model BookClub.WebApi.Models.Book

@{
    ViewData["Title"] = $"{Model.Title} - BookClub";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                            {
                                <img src="@Model.CoverImageUrl" alt="@Model.Title" class="img-fluid rounded" style="max-height: 400px;">
                            }
                            else
                            {
                                <div style="width: 100%; height: 300px; background: #f0f0f0; display: flex; align-items: center; justify-content: center; border-radius: 4px;">
                                    <i class="bi bi-book" style="font-size: 80px; color: #ccc;"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <h2 style="color: var(--primary-color); margin-bottom: 1rem;">@Model.Title</h2>

                            @if (Model.BookAuthors.Count > 0)
                            {
                                <p class="mb-2">
                                    <strong>By:</strong> @string.Join(", ", Model.BookAuthors.Select(ba => ba.Author?.Name ?? "Unknown"))
                                </p>
                            }

                            @if (Model.Genre != null)
                            {
                                <p class="mb-2">
                                    <strong>Genre:</strong> <span class="badge-genre">@Model.Genre.Name</span>
                                </p>
                            }

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    @if (Model.PublicationYear.HasValue)
                                    {
                                        <p class="mb-1"><strong>Published:</strong> @Model.PublicationYear</p>
                                    }
                                    @if (Model.PageCount.HasValue)
                                    {
                                        <p class="mb-1"><strong>Pages:</strong> @Model.PageCount</p>
                                    }
                                </div>
                                <div class="col-md-6">
                                    @if (!string.IsNullOrEmpty(Model.ISBN))
                                    {
                                        <p class="mb-1"><strong>ISBN:</strong> @Model.ISBN</p>
                                    }
                                    <p class="mb-1"><strong>Status:</strong> 
                                        @if (Model.IsAvailable)
                                        {
                                            <span class="badge bg-success">Available</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Unavailable</span>
                                        }
                                    </p>
                                </div>
                            </div>

                            @if (Model.AverageRating > 0)
                            {
                                <div class="rating-stars mb-3" style="font-size: 1.2rem;">
                                    @for (int i = 0; i < (int)Model.AverageRating; i++)
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                    @for (int i = (int)Model.AverageRating; i < 5; i++)
                                    {
                                        <i class="bi bi-star"></i>
                                    }
                                    <span style="margin-left: 10px;">@Model.AverageRating.ToString("F1") / 5.0</span>
                                </div>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <hr />
                        <h5>Description</h5>
                        <p>@Model.Description</p>
                    }
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header" style="background-color: var(--primary-color); color: white;">
                    <h5 class="mb-0"><i class="bi bi-pen"></i> Add Your Review</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="/reviews/create">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="BookId" value="@Model.BookId">
                        
                        <div class="mb-3">
                            <label class="form-label">Rating *</label>
                            <select name="Rating" class="form-select" required>
                                <option value="">-- Select Rating --</option>
                                <option value="1">1 Star - Poor</option>
                                <option value="2">2 Stars - Fair</option>
                                <option value="3">3 Stars - Good</option>
                                <option value="4">4 Stars - Very Good</option>
                                <option value="5">5 Stars - Excellent</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Member *</label>
                            <select name="MemberId" class="form-select" required>
                                <option value="">-- Select Member --</option>
                                @foreach (var member in (ViewBag.Members as List<BookClub.WebApi.Models.Member> ?? new()))
                                {
                                    <option value="@member.MemberId">@member.Name</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Comment</label>
                            <textarea name="Comment" class="form-control" rows="3" placeholder="Share your thoughts about this book..."></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary-custom"><i class="bi bi-check-circle"></i> Submit Review</button>
                    </form>
                </div>
            </div>

            @if (Model.Reviews?.Count > 0)
            {
                <div class="card">
                    <div class="card-header" style="background-color: var(--primary-color); color: white;">
                        <h5 class="mb-0"><i class="bi bi-chat-left-quote"></i> Reviews (@Model.Reviews.Count)</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var r in Model.Reviews.OrderByDescending(x => x.DatePosted))
                        {
                            <div class="mb-3 pb-3" style="border-bottom: 1px solid #eee;">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 style="margin: 0; color: var(--primary-color);">@r.Member?.Name</h6>
                                        <div class="rating-stars" style="font-size: 0.95rem;">
                                            @for (int i = 0; i < r.Rating; i++)
                                            {
                                                <i class="bi bi-star-fill"></i>
                                            }
                                            @for (int i = r.Rating; i < 5; i++)
                                            {
                                                <i class="bi bi-star"></i>
                                            }
                                            <span style="margin-left: 5px;">@r.Rating/5</span>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <small class="text-muted d-block mb-2">@r.DatePosted.ToString("MMM dd, yyyy")</small>
                                        <a href="/reviews/edit/@r.ReviewId" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i> Edit</a>
                                        <a href="/reviews/delete/@r.ReviewId" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i> Delete</a>
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(r.Comment))
                                {
                                    <p class="mb-0">@r.Comment</p>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No reviews yet. Be the first to review this book!
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header" style="background-color: var(--primary-color); color: white;">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Book Info</h5>
                </div>
                <div class="card-body">
                    <p><strong>Reviews:</strong> @Model.Reviews.Count</p>
                    <p><strong>Average Rating:</strong> @(Model.AverageRating > 0 ? Model.AverageRating.ToString("F1") : "No ratings yet")</p>
                    <p><strong>Status:</strong> @(Model.IsAvailable ? "Available" : "Unavailable")</p>
                </div>
            </div>

            <div class="d-grid gap-2">
                <a class="btn btn-primary-custom" href="/books/edit/@Model.BookId"><i class="bi bi-pencil"></i> Edit Book</a>
                <a class="btn btn-outline-secondary" href="/books"><i class="bi bi-arrow-left"></i> Back to Books</a>
            </div>
        </div>
    </div>
</div>

<style>
    .badge-genre {
        background-color: var(--accent-color) !important;
        font-size: 0.85rem;
        padding: 0.4rem 0.7rem;
    }
</style>
