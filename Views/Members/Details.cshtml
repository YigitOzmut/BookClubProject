@model BookClub.WebApi.Models.Member

@{
    ViewData["Title"] = $"{Model.Name} - BookClub";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h2 style="color: var(--primary-color); margin: 0;">@Model.Name</h2>
                            <p class="text-muted" style="margin: 0.5rem 0 0 0;">@Model.Email</p>
                        </div>
                        <div>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active Member</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </div>
                    </div>

                    <hr />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong><i class="bi bi-envelope"></i> Email:</strong> @Model.Email</p>
                            @if (!string.IsNullOrEmpty(Model.Phone))
                            {
                                <p><strong><i class="bi bi-telephone"></i> Phone:</strong> @Model.Phone</p>
                            }
                        </div>
                        <div class="col-md-6">
                            @if (!string.IsNullOrEmpty(Model.Role))
                            {
                                <p><strong><i class="bi bi-badge"></i> Role:</strong> <span class="badge" style="background-color: var(--accent-color);">@Model.Role</span></p>
                            }
                            <p><strong><i class="bi bi-calendar"></i> Joined:</strong> @Model.JoinDate.ToString("MMM dd, yyyy")</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                        <div class="mb-3">
                            <h5>Biography</h5>
                            <p>@Model.Bio</p>
                        </div>
                    }
                </div>
            </div>

            @if (Model.Reviews.Count > 0)
            {
                <div class="card mb-4">
                    <div class="card-header" style="background-color: var(--primary-color); color: white;">
                        <h5 class="mb-0"><i class="bi bi-star"></i> Reviews (@Model.Reviews.Count)</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var review in Model.Reviews.OrderByDescending(r => r.DatePosted))
                        {
                            <div class="mb-3 pb-3" style="border-bottom: 1px solid #eee;">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 style="color: var(--primary-color); margin: 0;">@review.Book?.Title</h6>
                                        <div class="rating-stars" style="font-size: 0.9rem;">
                                            @for (int i = 0; i < review.Rating; i++)
                                            {
                                                <i class="bi bi-star-fill"></i>
                                            }
                                            @for (int i = review.Rating; i < 5; i++)
                                            {
                                                <i class="bi bi-star"></i>
                                            }
                                            <span style="margin-left: 5px;">@review.Rating/5</span>
                                        </div>
                                    </div>
                                    <small class="text-muted">@review.DatePosted.ToString("MMM dd, yyyy")</small>
                                </div>
                                @if (!string.IsNullOrEmpty(review.Comment))
                                {
                                    <p class="mt-2 mb-0">@review.Comment</p>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header" style="background-color: var(--primary-color); color: white;">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Member Info</h5>
                </div>
                <div class="card-body">
                    <p><strong>Reviews:</strong> @Model.Reviews.Count</p>
                    <p><strong>Meetings:</strong> @Model.MemberMeetings.Count</p>
                    <p><strong>Status:</strong> @(Model.IsActive ? "Active" : "Inactive")</p>
                </div>
            </div>

            <div class="d-grid gap-2">
                <a href="/members/edit/@Model.MemberId" class="btn btn-primary-custom"><i class="bi bi-pencil"></i> Edit Profile</a>
                <a href="/members" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to Members</a>
            </div>
        </div>
    </div>
</div>
