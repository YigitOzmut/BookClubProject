@model IEnumerable<BookClub.WebApi.Models.Meeting>

@{
    ViewData["Title"] = "Meetings - BookClub";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title mb-0"><i class="bi bi-calendar2-event"></i> Book Club Meetings</h2>
        <a href="/meetings/create" class="btn btn-primary-custom btn-sm"><i class="bi bi-plus"></i> Schedule Meeting</a>
    </div>

    @if (Model.Count() > 0)
    {
        <div class="row">
            @foreach (var meeting in Model.OrderByDescending(m => m.Date))
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title" style="color: var(--primary-color); font-weight: 600; margin-bottom: 0.5rem;">
                                <i class="bi bi-calendar"></i> @meeting.Date.ToString("MMM dd, yyyy")
                            </h5>
                            <p class="card-text" style="font-size: 0.85rem; color: #666;">
                                <i class="bi bi-clock"></i> @meeting.Date.ToString("h:mm tt")
                            </p>

                            @if (!string.IsNullOrEmpty(meeting.Location))
                            {
                                <p class="card-text mb-2" style="font-size: 0.85rem; color: #666;">
                                    <i class="bi bi-geo-alt"></i> @meeting.Location
                                </p>
                            }

                            @if (meeting.BookMeetings.Count > 0)
                            {
                                <div class="mb-2">
                                    <h6 style="font-size: 0.9rem; color: var(--primary-color); margin: 0.5rem 0;">Books:</h6>
                                    @foreach (var bm in meeting.BookMeetings.Take(2))
                                    {
                                        <p class="mb-1" style="font-size: 0.8rem;">â€¢ @bm.Book?.Title</p>
                                    }
                                    @if (meeting.BookMeetings.Count > 2)
                                    {
                                        <p class="mb-1" style="font-size: 0.8rem; color: #999;">+ @(meeting.BookMeetings.Count - 2) more</p>
                                    }
                                </div>
                            }

                            @if (meeting.MemberMeetings.Count > 0)
                            {
                                <p class="card-text mb-2" style="font-size: 0.8rem; color: #999;">
                                    <i class="bi bi-people"></i> @meeting.MemberMeetings.Count attendee(s)
                                </p>
                            }

                            @if (!string.IsNullOrEmpty(meeting.Notes))
                            {
                                <p class="card-text" style="font-size: 0.85rem; color: #777;">
                                    @(meeting.Notes.Length > 80 ? meeting.Notes.Substring(0, 80) + "..." : meeting.Notes)
                                </p>
                            }

                            <div class="mt-auto">
                                <a href="/meetings/@meeting.MeetingId" class="btn btn-primary-custom btn-sm w-100 mb-2">View Details</a>
                                <div class="btn-group w-100" role="group">
                                    <a href="/meetings/edit/@meeting.MeetingId" class="btn btn-outline-secondary btn-sm" title="Edit"><i class="bi bi-pencil"></i></a>
                                    <form method="post" action="/meetings/delete/@meeting.MeetingId" style="display: inline;" onsubmit="return confirm('Are you sure?');">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete"><i class="bi bi-trash"></i></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No meetings scheduled yet. <a href="/meetings/create">Schedule a meeting!</a>
        </div>
    }
</div>
