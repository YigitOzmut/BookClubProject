@model BookClub.WebApi.Models.Meeting

@{
    ViewData["Title"] = $"Meeting - {Model.Date:MMM dd, yyyy}";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header" style="background-color: var(--primary-color); color: white;">
                    <h4 class="mb-0"><i class="bi bi-calendar2-event"></i> Meeting Details</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5 style="color: var(--primary-color); margin: 0;">@Model.Date.ToString("dddd, MMMM dd, yyyy")</h5>
                            <p class="text-muted mb-0">@Model.Date.ToString("h:mm tt")</p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Location))
                        {
                            <div class="col-md-6">
                                <p><strong><i class="bi bi-geo-alt"></i> Location:</strong> @Model.Location</p>
                            </div>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mb-3">
                            <h6>Notes</h6>
                            <p>@Model.Notes</p>
                        </div>
                    }
                </div>
            </div>

            @if (Model.BookMeetings.Count > 0)
            {
                <div class="card mb-4">
                    <div class="card-header" style="background-color: var(--primary-color); color: white;">
                        <h5 class="mb-0"><i class="bi bi-book"></i> Books (@Model.BookMeetings.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var bm in Model.BookMeetings)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h6 style="color: var(--primary-color);">@bm.Book?.Title</h6>
                                            @if (bm.Book?.BookAuthors.Count > 0)
                                            {
                                                <p class="mb-1" style="font-size: 0.9rem;">
                                                    <strong>By:</strong> @string.Join(", ", bm.Book.BookAuthors.Select(ba => ba.Author?.Name ?? "Unknown"))
                                                </p>
                                            }
                                            @if (bm.Book?.Genre != null)
                                            {
                                                <p class="mb-0" style="font-size: 0.85rem;">
                                                    <strong>Genre:</strong> @bm.Book.Genre.Name
                                                </p>
                                            }
                                            <a href="/books/@bm.Book?.BookId" class="btn btn-sm btn-outline-primary mt-2">View Book</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            @if (Model.MemberMeetings.Count > 0)
            {
                <div class="card">
                    <div class="card-header" style="background-color: var(--primary-color); color: white;">
                        <h5 class="mb-0"><i class="bi bi-people"></i> Attendees (@Model.MemberMeetings.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var mm in Model.MemberMeetings)
                            {
                                <div class="col-md-6 mb-2">
                                    <div class="d-flex justify-content-between align-items-center p-2" style="background-color: #f8f9fa; border-radius: 4px;">
                                        <div>
                                            <p class="mb-0" style="font-weight: 600;">@mm.Member?.Name</p>
                                            <p class="mb-0" style="font-size: 0.85rem; color: #666;">@mm.Member?.Email</p>
                                        </div>
                                        @if (!string.IsNullOrEmpty(mm.Member?.Role))
                                        {
                                            <span class="badge" style="background-color: var(--accent-color);">@mm.Member.Role</span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header" style="background-color: var(--primary-color); color: white;">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Meeting Info</h5>
                </div>
                <div class="card-body">
                    <p><strong>Books:</strong> @Model.BookMeetings.Count</p>
                    <p><strong>Attendees:</strong> @Model.MemberMeetings.Count</p>
                    <p><strong>Date:</strong> @Model.Date.ToString("MMM dd, yyyy")</p>
                </div>
            </div>

            <div class="d-grid gap-2">
                <a href="/meetings/edit/@Model.MeetingId" class="btn btn-primary-custom"><i class="bi bi-pencil"></i> Edit</a>
                <a href="/meetings" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back</a>
            </div>
        </div>
    </div>
</div>
